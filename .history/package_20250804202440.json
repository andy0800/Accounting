{
  "name": "نظام-إدارة-التأشيرات",
  "version": "1.0.0",
  "description": "نظام محاسبي وإدارة تأشيرات شامل باللغة العربية",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start"
  },
  "keywords": [
    "تأشيرات",
    "محاسبة",
    "إدارة",
    "نظام",
    "عربي"
  ],
  "author": "فريق التطوير",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "mongodb": "^6.18.0"
  }
}
